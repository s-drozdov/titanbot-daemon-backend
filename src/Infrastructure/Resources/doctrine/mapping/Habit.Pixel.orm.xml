<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Titanbot\Daemon\Domain\Entity\Habit\Pixel" table="pixels">
        <id name="uuid" type="uuid_binary" column="uuid">
            <generator strategy="NONE"/>
        </id>

        <many-to-one field="dot" target-entity="Titanbot\Daemon\Domain\Entity\Habit\Dot" inversed-by="pixelList">
            <join-column name="dot_uuid" referenced-column-name="uuid" nullable="false"/>
        </many-to-one>

        <many-to-one field="color" target-entity="Titanbot\Daemon\Domain\Entity\Habit\Color" inversed-by="pixelList">
            <join-column name="color_uuid" referenced-column-name="uuid" nullable="false"/>
        </many-to-one>

        <many-to-many
            field="habitList"
            target-entity="Titanbot\Daemon\Domain\Entity\Habit\Habit"
            mapped-by="pixelList"
        />
    </entity>
</doctrine-mapping>
