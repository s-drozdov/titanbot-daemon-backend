<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Titanbot\Daemon\Domain\Entity\Habit\Habit" table="habits">
        <id name="uuid" type="uuid_binary" column="uuid">
            <generator strategy="NONE"/>
        </id>

        <field name="accountLogicalId" column="account_logical_id" type="integer" nullable="true"/>

        <field name="priority" column="priority" type="integer" nullable="true"/>

        <field name="triggerOcr" column="trigger_ocr" type="string" length="255" nullable="true"/>

        <field name="triggerShell" column="trigger_shell" type="string" length="255" nullable="true"/>

        <field name="action" column="action" type="string" length="255" nullable="false"/>

        <field name="isActive" column="is_active" type="boolean" nullable="false"/>

        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="false"/>

        <many-to-many
            field="pixelList"
            target-entity="Titanbot\Daemon\Domain\Entity\Habit\Pixel"
            inversed-by="habitList"
        >
            <join-table name="habit_pixels">
                <join-columns>
                    <join-column
                        name="habit_uuid"
                        referenced-column-name="uuid"
                        on-delete="CASCADE"
                    />
                </join-columns>
                <inverse-join-columns>
                    <join-column
                        name="pixel_uuid"
                        referenced-column-name="uuid"
                        on-delete="CASCADE"
                    />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
